<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/show_notification1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_notification1"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/show_notification2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_notification2"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/show_notification3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_notification3"
        android:textAllCaps="false" />
    <Button
        android:id="@+id/show_notification4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_notification4"
        android:textAllCaps="false" />

</LinearLayout>